<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Header COMPATTO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary">

        <!-- Back button (cambia icona in base al contesto) -->
        <ImageButton
            android:id="@+id/btn_back_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/arrow_down_float"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close_player"
            app:tint="@android:color/white" />

        <!-- Info normale O contatore selezione -->
        <LinearLayout
            android:id="@+id/normal_info_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/playlist_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/playlist_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/playlist_song_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/songs_in_playlist"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Contatore selezione (nascosto inizialmente) -->
        <TextView
            android:id="@+id/selection_count_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="0 selezionate"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <!-- Bottoni modalità selezione -->
        <ImageButton
            android:id="@+id/btn_add_selected_to_other_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_input_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Aggiungi ad altra playlist"
            android:visibility="gone"
            app:tint="@android:color/white"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btn_remove_selected_from_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rimuovi da playlist"
            android:visibility="gone"
            app:tint="@android:color/white"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btn_sort_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_sort"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ordina canzoni"
            app:tint="@android:color/white"
            android:layout_marginEnd="8dp" />

        <!-- Menu playlist (visibile solo in modalità normale) -->
        <ImageButton
            android:id="@+id/btn_playlist_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/playlist_menu"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Lista canzoni -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlist_songs_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false" />

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/empty_state_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:layout_marginBottom="16dp"
                app:tint="?android:attr/textColorSecondary"
                android:alpha="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nessuna canzone in questa playlist"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aggiungi canzoni dal menu principale"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:alpha="0.7" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>