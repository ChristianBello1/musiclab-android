<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_back_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close_player"
            app:tint="@android:color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Selezione: contatore -->
        <TextView
            android:id="@+id/selection_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 selezionati"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:layout_marginEnd="8dp" />

        <!-- Selezione: aggiungi ad altra playlist -->
        <ImageButton
            android:id="@+id/btn_add_selected_to_other_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_input_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Aggiungi ad altra playlist"
            android:visibility="gone"
            app:tint="@android:color/white"
            android:layout_marginEnd="4dp" />

        <!-- Selezione: rimuovi da questa playlist -->
        <ImageButton
            android:id="@+id/btn_remove_selected_from_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rimuovi da playlist"
            android:visibility="gone"
            app:tint="@android:color/white"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btn_sort_playlist"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_sort"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ordina canzoni"
            app:tint="@android:color/white"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btn_playlist_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/playlist_menu"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Info Playlist (nome e conteggio canzoni) -->
    <LinearLayout
        android:id="@+id/normal_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/surface_dark">

        <TextView
            android:id="@+id/playlist_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/playlist_song_count_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 canzoni"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- ✅ NUOVO: Container con RecyclerView e Loading -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- RecyclerView delle canzoni -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlist_songs_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

        <!-- ✅ Loading Container semplificato -->
        <LinearLayout
            android:id="@+id/loading_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/background_dark"
            android:visibility="gone">

            <!-- ProgressBar circolare -->
            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminate="true"
                style="@android:style/Widget.ProgressBar.Large" />

            <!-- Testo di caricamento statico -->
            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caricamento playlist..."
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>