<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bottom_player_background"
        android:padding="12dp">

        <!-- Row principale: Icona + Info + Stop + Queue -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icona Nota Musicale -->
            <ImageView
                android:id="@+id/album_art_mini"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_music_note"
                android:scaleType="centerInside"
                android:padding="10dp"
                app:tint="@color/primary_purple" />

            <!-- Info Canzone (CLICCABILE) -->
            <LinearLayout
                android:id="@+id/song_info_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/current_song_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome Canzone"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <TextView
                    android:id="@+id/current_song_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Artista"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Pulsante STOP -->
            <ImageButton
                android:id="@+id/btn_stop"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@android:drawable/ic_media_pause"
                android:background="@android:color/transparent"
                android:contentDescription="Stop"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                app:tint="@color/primary_purple" />

            <!-- Pulsante Coda -->
            <ImageButton
                android:id="@+id/btn_expand_player"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_apps"
                android:background="@android:color/transparent"
                android:contentDescription="Apri coda"
                android:layout_marginStart="4dp"
                app:tint="@color/text_primary" />

        </LinearLayout>

        <!-- Progress Bar con Tempi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:minWidth="40dp"
                android:gravity="center" />

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/primary_purple"
                android:thumbTint="@color/primary_purple"
                android:progressBackgroundTint="#FFFFFF22" />

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:minWidth="40dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>