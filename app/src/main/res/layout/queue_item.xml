<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Drag Handle -->
        <ImageView
            android:id="@+id/drag_handle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:layout_marginEnd="12dp"
            app:tint="@color/text_secondary"
            android:contentDescription="@string/move_song" />

        <!-- Now Playing Indicator -->
        <ImageView
            android:id="@+id/now_playing_indicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_media_play"
            android:layout_marginEnd="8dp"
            app:tint="@color/primary_purple"
            android:visibility="gone" />

        <!-- Song Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/queue_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/up_next"
                android:textSize="10sp"
                android:textColor="@color/primary_purple"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/queue_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/song_title_placeholder"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/queue_song_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artist_placeholder"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Duration -->
        <TextView
            android:id="@+id/queue_song_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration_placeholder"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Remove Button -->
        <ImageButton
            android:id="@+id/btn_remove_from_queue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/remove_from_queue"
            app:tint="@color/text_secondary"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>